<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.batrakov.contentproviderview">

    <uses-permission android:name="com.example.batrakov.contentproviderdatabase.permission.READ_PROVIDER"/>
    
    <application
        android:allowBackup="true"
        android:icon="@raw/icon_tick"
        android:label="@string/app_name"
        android:roundIcon="@raw/icon_tick"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.MainListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activities.DetailsActivity" android:parentActivityName=".activities.MainListActivity">

        </activity>
    </application>

</manifest>